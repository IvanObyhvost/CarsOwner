@using CarsOwner.Resource
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="wrapper">
        <div id="header">
            <div class="title">
                <span><img class="logo-img" src="~/Content/logo1.png" alt="logo" /></span>
                Ко вниманию автовладельцам
            </div>
        </div>

        <div id="categories" class="list-group">
            @Html.ActionLink(ConstantNames.MainPage, "Index", "Home", null, new {@class="list-group-item"})
            @Html.ActionLink(ConstantNames.ListOwners, "ListOwner", "Home", null, new { @class = "list-group-item" })
            @Html.ActionLink(ConstantNames.ListCars, "CarsList", "Car", null, new { @class = "list-group-item" })
            @Html.ActionLink(ConstantNames.WhatNew, "WhatNew", "Home", null, new { @class = "list-group-item" })
        </div>

        <div id="content">
            @RenderBody()
        </div>

        <div id="footer">
            
        </div>
    </div>
</body>

</html>

